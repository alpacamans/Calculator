<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="dino.developer.calculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="50sp"
                android:gravity="right"
                android:text="asd"
                app:autoSizeTextType="uniform"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textSize="50sp"
                android:text="asd"
                android:autoSizeTextType="uniform"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:background="@color/black"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <Button
                android:id="@+id/mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:text="×"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/oneBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="1"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/zerozero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="00"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/twoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="2"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="3"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <Button
                android:id="@+id/era"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="←"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <Button
                android:id="@+id/sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>


            <Button
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="50sp"
                android:autoSizeMinTextSize="50sp"
                android:autoSizeMaxTextSize="100sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
